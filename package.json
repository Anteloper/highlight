{
	"name": "highlight",
	"version": "1.0.0",
	"main": "index.js",
	"repository": "git@github.com:highlight-run/highlight.git",
	"author": "Highlight",
	"license": "MIT",
	"packageManager": "yarn@3.2.3",
	"workspaces": [
		"packages/*",
		"packages/experiments/*"
	],
	"scripts": {
		"prepare": "only-allow yarn && husky install",
		"frontend:start": "echo \"run 'yarn dev:frontend' instead, or run 'yarn dev' to run all projects at once\"",
		"dev": "run-p --print-label --race \"dev:*\"",
		"dev:frontend": "yarn workspaces foreach --parallel --interlaced --verbose --exclude render run dev",
		"dev:backend": "cd backend && make start",
		"dev:redis": "redis-server",
		"generate": "hygen",
		"g": "hygen",
		"format": "prettier --write --ignore-unknown . \"!./data\"",
		"format-check": "prettier --check --ignore-unknown . \"!./data\""
	},
	"devDependencies": {
		"@types/node": "^18.7.14",
		"bumpp": "^8.2.1",
		"chalk": "^5.0.1",
		"husky": "^8.0.1",
		"hygen": "^6.2.7",
		"npm-run-all": "^4.1.5",
		"only-allow": "^1.1.1",
		"prettier": "^2.7.1",
		"pretty-quick": "^3.1.3"
	},
	"resolutions": {
		"ansi-regex": "5.0.1",
		"terser": "5.14.2",
		"json-schema": "0.4.0",
		"react-error-overlay": "6.0.9"
	}
}
