{
	"name": "highlight",
	"private": true,
	"version": "1.0.0",
	"main": "index.js",
	"repository": "git@github.com:highlight-run/highlight.git",
	"author": "Highlight",
	"license": "MIT",
	"dependencies": {
		"concurrently": "^6.5.1"
	},
	"workspaces": [
		"client",
		"firstload",
		"frontend"
	],
	"scripts": {
		"prepare": "husky install && patch-package",
		"firstload:build": "yarn workspace @highlight-run/client build && yarn workspace highlight.run build",
		"frontend:clean": "concurrently 'rm -rf node_modules' 'cd frontend && rm -rf build node_modules' 'cd client && rm -rf dist node_modules' 'cd firstload && rm -rf dist node_modules'",
		"frontend:build": "yarn firstload:build && yarn workspace @highlight-run/frontend build",
		"frontend:start": "yarn firstload:build && run-p --print-label --race dev:client dev:client-gql dev:frontend",
		"dev": "run-p --print-label --race 'dev:*'",
		"dev:backend": "cd backend && make start",
		"dev:frontend": "yarn workspace @highlight-run/frontend dev",
		"dev:client": "yarn workspace @highlight-run/client dev",
		"dev:client-gql": "yarn workspace @highlight-run/client gql",
		"dev:firstload": "yarn workspace highlight.run dev",
		"dev:redis": "redis-server",
		"generate": "hygen",
		"g": "yarn generate",
		"format": "prettier --write --ignore-unknown . \"!./data\"",
		"format-check": "prettier --check --ignore-unknown . \"!./data\"",
		"ci:backend": "cd backend && doppler run -- ./backend",
		"ci:build": "yarn ci:install:go && yarn firstload:build",
		"ci:install:go": "cd backend && go build",
		"ci:start": "run-p --print-label --race dev:frontend dev:client ci:backend",
		"cy:run": "cypress run",
		"cy:run:chrome": "cypress run --headed --browser chrome"
	},
	"devDependencies": {
		"@types/node": "^18.7.14",
		"chalk": "^5.0.1",
		"cypress": "^10.8.0",
		"husky": "^8.0.1",
		"hygen": "^6.2.7",
		"npm-run-all": "^4.1.5",
		"patch-package": "^6.4.7",
		"prettier": "^2.7.1",
		"pretty-quick": "^3.1.3"
	},
	"packageManager": "yarn@3.2.3"
}
