{
	"name": "highlight",
	"version": "1.0.0",
	"main": "index.js",
	"repository": "git@github.com:highlight-run/highlight.git",
	"author": "Highlight",
	"license": "MIT",
	"scripts": {
		"prepare": "only-allow pnpm && husky install",
		"frontend:start": "echo \"run 'pnpm dev:frontend' instead, or run 'pnpm dev' to run all projects at once\"",
		"dev": "run-p --print-label --race dev:*",
		"dev:frontend": "pnpm -r --parallel --filter=!render run dev",
		"dev:backend": "cd backend && make start",
		"dev:redis": "redis-server",
		"generate": "hygen",
		"g": "hygen",
		"format": "prettier --write --ignore-unknown . \"!./data\"",
		"format-check": "prettier --check --ignore-unknown . \"!./data\"",
		"bump-versions": "pnpm -r --workspace-concurrency=1 exec bumpp --no-commit --no-tag --no-push"
	},
	"devDependencies": {
		"@types/node": "^18.7.14",
		"bumpp": "^8.2.1",
		"chalk": "^5.0.1",
		"husky": "^8.0.1",
		"hygen": "^6.2.7",
		"npm-run-all": "^4.1.5",
		"only-allow": "^1.1.1",
		"prettier": "^2.7.1",
		"pretty-quick": "^3.1.3"
	},
	"pnpm": {
		"patchedDependencies": {
			"@rehooks/local-storage@2.4.4": "patches/@rehooks__local-storage@2.4.4.patch"
		}
	}
}
