{
	"$schema": "https://turborepo.org/schema.json",
	"baseBranch": "origin/master",
	"pipeline": {
		"codegen": {
			"inputs": ["./**/*.gql"],
			"outputs": ["src/graph/generated/**"]
		},
		"build": {
			"dependsOn": ["codegen", "^build"],
			"outputs": ["build/**", "dist/**"],
			"env": ["NODE_OPTIONS='--max-old-space-size=7168'"]
		},
		"dev": {
			"cache": false
		},
		"test": {
			"dependsOn": ["build"],
			"outputs": [],
			"inputs": [
				"src/**/*.tsx",
				"src/**/*.ts",
				"test/**/*.ts",
				"test/**/*.tsx"
			]
		}
	},
	"globalEnv": ["DOPPLER_TOKEN"]
}
