{
    "name": "Highlight Extension",
    "description": "Highlight's Chrome Extension",
    "version": "1.0",
    "manifest_version": 2,
    "browser_action": {
        "default_popup": "index.html",
        "default_title": "Highlight Extension"
    },
    "icons": {
        "16": "logo192.png",
        "48": "logo192.png",
        "128": "logo192.png"
    },
    "permissions": ["activeTab", "tabs", "http://*/*", "https://*/*"],
    "web_accessible_resources": ["/firstload/firstload/src/index.js"],
    "content_security_policy": "script-src 'self' https://static.highlight.run; object-src 'self'"
}
